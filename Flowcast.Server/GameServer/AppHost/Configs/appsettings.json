{
  "AllowedHosts": "*",
  "ConnectionStrings": {
  },
  "Identity": {
    "UseInMemoryDatabase": false,

    "TokenOptions": {
      "Issuer": "https://td-dev.kingcodestudio.com",
      "Audience": "game-api",
      "Algorithm": "RS256",
      "AccessTokenExpiryMinutes": 15,
      "RefreshTokenExpiryDays": 30,
      "ClockSkewSeconds": 60
    },

    "KeyManagement": {
      "AutoSeedOnStartup": true,
      "RotationDays": 90,
      "OverlapDays": 30,
      "RsaKeySize": 3072,
      "PersistPrivateKey": true,
      "ActiveKeyCacheMinutes": 1,
      "ValidationSetCacheMinutes": 5,
      "JwksPath": "/.well-known/jwks.json"
    },

    "Google": {
      "ClientIds": [
        "1234567890-aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa.apps.googleusercontent.com",
        "1234567890-bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb.apps.googleusercontent.com"
      ],
      "HostedDomain": null,
      "RequireEmailVerified": true,
      "ClockSkewSeconds": 60
    }
  },
  "PlayerProgress": {
    "UseInMemoryDatabase": false
  },
  "Realtime": {
    "Messaging": {
      "WireFormat": "Json"
    },
    "Routing": {
      "Enabled": true,
      "Partitions": 8,
      "PartitionQueueCapacity": 512
    },
    "Liveness": {
      "TimeoutSeconds": 30,
      "CloseStatusOnTimeout": "NormalClosure",
      "CloseReasonOnTimeout": "idle-timeout",
      "CountAnyInboundAsActivity": true
    },
    "Gateway": {
      "ReceiveBufferBytes": 8192,
      "RequireAuthenticatedPrincipal": false
    }
  }
}
